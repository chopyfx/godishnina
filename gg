  <script>
    var vid = document.getElementById("video-bg-elem");
    if (vid) vid.volume = 0.1;

    window.onload = function () {
      // üéâ Confetti!
      confetti({
        particleCount: 150,
        spread: 80,
        origin: { y: 0.6 }
      });

      // Disable right-click and other actions
      document.addEventListener("contextmenu", function (e) {
        e.preventDefault();
      }, false);

      document.addEventListener("keydown", function (e) {
        if (
          (e.ctrlKey && e.shiftKey && (e.keyCode == 73 || e.keyCode == 74)) ||
          (e.keyCode == 83 && (navigator.platform.match("Mac") ? e.metaKey : e.ctrlKey)) ||
          (e.ctrlKey && e.keyCode == 85) ||
          e.keyCode == 123
        ) {
          e.preventDefault();
        }
      }, false);
    };

    const gallery = document.getElementById('photo-gallery');
    let imageIndex = 13; // You already have images 1 to 12
    const maxImages = 100; // or however many you have

    function loadMoreImages() {
      for (let i = 0; i < 6 && imageIndex <= maxImages; i++) {
        const img = document.createElement('img');
        img.src = `img/${imageIndex}.JPEG`;
        img.alt = `Photo ${imageIndex}`;
        gallery.appendChild(img);
        imageIndex++;
      }
    }

    // Infinite Scroll
    window.addEventListener('scroll', ()
